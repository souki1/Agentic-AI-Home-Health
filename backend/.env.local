
ENV_NAME=local

# PostgreSQL only. Replace YOUR_POSTGRES_PASSWORD with your postgres user password.
# Create DB first: createdb -U postgres health_analytics  (or via pgAdmin)
DATABASE_URL=postgresql://postgres:root@localhost:5433/health_analytics
DB_POOL_SIZE=5
DB_POOL_RECYCLE_SECONDS=300

# Auth
SECRET_KEY=root

# Backend base URL and server bind
BACKEND_BASE_URL=http://localhost:8000
HOST=0.0.0.0
PORT=8000

# CORS: comma-separated allowed origins (frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,http://127.0.0.1:3000

# Logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
